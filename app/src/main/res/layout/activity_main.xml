<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/appLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/gold"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textGreetUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="serif"
            android:text="@string/greet_message"
            android:textColor="@color/black"
            android:textSize="@dimen/greet_message_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textVerse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/bible_verse_hint"
            android:importantForAutofill="no"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:textColorHint="#33691E"
            android:textSize="@dimen/bible_verse_size"
            android:textStyle="normal" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>